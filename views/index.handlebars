<div class="container">
    <div class="row justify-content-center">
        <h1>Eat-Da-Burger Restaurant</h1>
    </div>
    <div class="row justify-content-center">
        <img id="burger-pic" src="/img/burger.png" alt="burger">
    </div>

</div>
<div class="container">
    <div class="row">
        <div class="col-sm">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li class="burger-option">
                    <h5>{{burger_name}}</h5>
                    <button class="devour" data-id="{{id}}">DEVOUR</button>
                </li>

                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h2>Order New Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    
                    <input type="text" id="burgerName" name="name">
                </div>
                <button id ="add-burger" type="submit">Submit</button>
            </form>
        </div>
        <div class="col-sm">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li class="burger-eaten">
                    <h5>{{burger_name}}</h5>

                </li>

                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>